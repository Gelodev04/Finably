// Define database connection
// Note: Connection URL is configured in prisma.config.ts for Prisma 7+
datasource db {
  provider = "postgresql"
}

// Define custom output path for generated Prisma Client
generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

// Waitlist entries table
model WaitlistEntry {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Beta application entries table
model BetaApplication {
  id               String   @id @default(cuid())
  email            String
  fullName         String?
  platforms        String[] // Array of platform strings (iOS, Android, Web)
  financePlanning  String?
  agreeToEmails    Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
